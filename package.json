{
  "name": "this-is-auth",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run ./scripts/seed-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.3.13",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
